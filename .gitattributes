# Auto detect text files and perform LF normalization
* text=auto eol=lf

# Dart files should always use LF
*.dart text eol=lf

# Shell scripts should use LF
*.sh text eol=lf

# Configuration files
*.yaml text eol=lf
*.yml text eol=lf
*.json text eol=lf
*.xml text eol=lf
*.plist text eol=lf

# Markdown
*.md text eol=lf

# Keep Windows batch files with CRLF
*.bat text eol=crlf
*.cmd text eol=crlf
